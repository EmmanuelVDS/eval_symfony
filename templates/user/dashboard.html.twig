{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <h1 class="mt-5">Tableau de bord</h1>
        <div class="mt-2 mb-3">
            <a href="{{ path('add_product') }}">+ Ajouter un produit</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-light">
            <tr>
                <th scope="col">Nom de l'objet</th>
                <th scope="col">Image</th>
                <th scope="col">Prix</th>
                <th scope="col">Ajouté le</th>
                <th scope="col">Retirer de la vente</th>
            </tr>
            </thead>
            <tbody>

            {% for product in products %}

                <tr class="align-middle">
                    <td>{{ product.name }}</td>
                    <td class="text-center"><img src="{{ product.image }}" alt="Image of the article {{ product.name }}" width="100px"></td>
                    <td>{{ product.price }}€</td>
                    <td>{{ product.dateAdded|date("d/m/Y") }}</td>
                    <td class="text-center">
                        {% if not product.isActive %}
                            <button class="btn btn-sm btn-success">
                                Ajouter à la vente
                            </button>
                        {% elseif product.isActive %}
                            <button class="btn btn-sm btn-danger">
                                Retirer de la vente
                            </button>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
