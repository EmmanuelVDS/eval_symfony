{% extends 'base.html.twig' %}

{% block body %}
    {{ include('parts/head.html.twig') }}
    <div class="container">

        <h1>Tableau de bord</h1>

        <a href="{{ path('add_product') }}">+ Ajouter un produit</a>

        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-light">
            <tr>
                <th scope="col">Nom de l'objet</th>
                <th scope="col">Prix</th>
                <th scope="col">Ajout√© le</th>
                <th scope="col">Retirer de la vente</th>
            </tr>
            </thead>
            <tbody>

            {% for product in products %}

                <tr>
                    <td>{{ product.name }} <img src="{{ product.image }}" alt="Image of the article {{ product.name }}" width="100px"></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.dateAdded|date("d/m/Y H:i:s") }}</td>
                    <td>{{ product.id }}</td>
                </tr>

            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
